{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "logstash"
    },
    "github_com/devopsfaith/krakend-metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "router": {
      "logger_skip_paths": [
        "/__health",
        "/__stats"
      ],
      "disable_access_log": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "DELETE",
        "GET",
        "HEAD",
        "PATCH",
        "POST",
        "PUT"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_headers": [
        "Accept-Language"
      ],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false
    },
    "plugin/http-server": {
      "name": [
        "access-log"
      ],
      "access-log": {
        "product_name": "Subs Gateway Test",
        "buffer_size": 1000,
        "firehose_batch_size": 500,
        "firehose_send_early_timeout_ms": 60000,
        "use_aws_default_credentials": true,
        "aws_region": "eu-west-2",
        "delivery_stream_name": "subscriptions-uk-apifactory-api-usage",
        "ignore_paths": [
          "/__health",
          "/__stats",
          "/stub",
          "/subscriptions/*",
          "/subscriptions/*/usage-reports",
          "/subscriptions/*/usage-reports/*",
          "/kidsloop"
        ]
      }
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "subscriptions-microgateway",
  "port": 8080,
  "endpoints": [
    {{ template "example.tmpl" . }}
  ]
}
